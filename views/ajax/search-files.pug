if files.length
  each file in files
    .col-xs-24
      .row.search-result.search-result-slim
        .col-xs-24.col-md-6.col-lg-1.hidden-sm-down
          .search-result-image-container
            i.fa.fa-paperclip.search-result-image-placeholder(aria-hidden="true")
        .col-xs-24.col-md-18.col-lg-23
          .row
            .col-xs-24.details-container
              a.title(href='/redirect/file/' + file.id, title='Lataa liite ' + file.title)
                |Lataa liite: 
                =file.title
              if file.pageId
                br
                a.title(href='/redirect/page/' + file.pageId, title='Näytä sivu, joka sisältää liitteen ' + file.title)
                  |Näytä sivu, joka sisältää liitteen
  .col-xs-24.pages-container.no-gutters
    if page > 0
      a.page-prev(href="#p" + (page - 1), title="Edellinen sivu")
        |Edellinen sivu
    else
      span.page-prev
        |Edellinen sivu
    span.page-number
      |Sivu 
      =page + 1
    if !lastPage
      a.page-next(href="#p" + (page + 1), title="Seuraava sivu")
        |Seuraava sivu
    else
      span.page-next
        |Seuraava sivu
else
  p.no-search-results
    |Hakuehdolla ei löytynyt tiedostoja