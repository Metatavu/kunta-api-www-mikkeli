extends ../layout/timetables.pug

block scripts
  script(defer="defer",type="text/javascript", src="//cdn.metatavu.io/libs/leaflet/1.0.3/leaflet.js")
  script(defer="defer",type="text/javascript", src="//cdn.metatavu.io/libs/leaflet.awesome-markers/2.0.2/leaflet.awesome-markers.min.js")
  script(defer="defer",type="text/javascript", src="//cdn.metatavu.io/libs/moment/2.17.1/moment-with-locales.js")
