  .container-fluid.no-gutters
    .row.header
      .col-xs-12.title
        h1 Bussiaikataulut
      .col-xs-12
        h1.pull-xs-right.current-time
    .row
      .col-xs-12
        .timetable-container
          img.loader(src='/gfx/load.svg')
      .col-xs-12
        #map